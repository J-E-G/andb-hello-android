<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:scaleType="centerCrop"
        android:src="@drawable/app_dev" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/udacity_logo"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#20B8E7"
        android:text="@string/start_learning_now"
        android:textSize="14sp"
        android:textColor="@color/transparent_white"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:text="@string/udacity_street_name"
        android:textSize="18sp"
        android:layout_marginStart="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="100dp"
        android:text="@string/udacity_city_state_zip"
        android:textSize="18sp"
        android:layout_marginStart="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="100dp"
        android:text="@string/udacity_tel_num"
        android:textSize="18sp"
        android:layout_marginStart="100dp" />

</LinearLayout>